<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="10"
    tools:context="com.samantha.clockwork.CalculatorActivity"
    tools:showIn="@layout/activity_calculator">

    <Space android:layout_width="wrap_content" android:layout_height="40dp"/>
    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Pendulum Length"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="0"
        android:id="@+id/currentlength"
        android:layout_margin="10dp"
        android:ems="3"/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="How fast or slow is the clock?"/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_fast"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Fast" />

        <RadioButton android:id="@+id/radio_slow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Slow" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Mins"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Secs"/>



    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="In 24 Hrs: "/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="time"
        android:id="@+id/min24"
        android:text="0"
        android:layout_margin="10dp"
        android:ems="3"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="time"
        android:id="@+id/sec24"
        android:text="0"
        android:layout_margin="10dp"
        android:ems="3"/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="In 1 Hr: "/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="time"
        android:id="@+id/min1"
        android:text="0"
        android:layout_margin="10dp"
        android:ems="3"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="time"
        android:id="@+id/sec1"
        android:text="0"
        android:layout_margin="10dp"
        android:ems="3"/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Results: " />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Current: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Desired: "/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Beats per Hour: "/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:ems="3"
        android:id="@+id/currenthour"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:ems="3"
        android:id="@+id/desiredhour"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Beats per Minute: "/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:ems="3"
        android:id="@+id/currentminute"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:ems="3"
        android:id="@+id/desiredminute"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Pendulum Length: "/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:ems="3"
        android:id="@+id/currentlength2"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:ems="3"
        android:id="@+id/desiredlength"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Space android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Needed Pendulum Change: "/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_margin="10dp"
        android:ems="3"
        android:id="@+id/neededchange"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Calculate" />


</GridLayout>