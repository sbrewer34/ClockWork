<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:gravity="center"
        android:layout_weight="0.37"
        android:textSize="54sp"
        android:text="ClockWork" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendulum Adjustment Calculator"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_calculator"
          />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Beat Measurement"
            android:id="@+id/button_measure"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Your Clock Collection"
            android:id="@+id/button_collection"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Settings"
            android:id="@+id/button_settings"
             />
    </LinearLayout>